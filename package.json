{
  "name": "manga-pet",
  "version": "1.1.7",
  "description": "Download and send manga directly to your kindle",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "author": "Daniel Honus <dhonus@tuta.io>",
  "license": "GPL-3.0-or-later",
  "devDependencies": {
    "@electron-forge/cli": "^6.0.4",
    "@electron-forge/maker-deb": "^6.0.4",
    "@electron-forge/maker-flatpak": "^6.0.4",
    "@electron-forge/maker-squirrel": "^6.0.4",
    "@electron-forge/maker-zip": "^6.0.4",
    "@types/nodemailer": "^6.4.7",
    "electron": "^22.0.0",
    "electron-builder": "~25.0.5",
    "electron-builder-squirrel-windows": "^24.13.3"
  },
  "dependencies": {
    "body-parser": "^1.20.1",
    "cheerio": "^1.0.0-rc.12",
    "cors": "^2.8.5",
    "ejs": "^3.1.8",
    "electron-squirrel-startup": "^1.0.0",
    "express": "^4.18.2",
    "helmet": "^6.0.1",
    "nodemailer": "^6.8.0",
    "nodepub": "^3.0.8",
    "request": "^2.88.2",
    "request-promise": "^4.2.6",
    "yarn": "^1.22.19"
  },
  "build": {
    "appId": "manga-pet",
    "mac": {
      "category": "mangapet.media.manga"
    },
    "linux": {
      "target": "pacman",
      "category": "AudioVideo",
      "icon": "./src/256x256.png",
      "desktop": {
        "MimeType": "application/x-manga-pet",
        "StartupWMClass": "manga-pet",
        "icon": "manga-pet"
      }
    },
    "nsis": {
      "oneClick": false,
      "shortcutName": "manga-pet",
      "license": "./LICENSE",
      "installerSidebar": "src/side.bmp"
    },
    "icon": "./src/256x256.ico",
    "files": [
      "**/*",
      "../temp/**/*"
    ],
    "extraResources": [
      "temp"
    ]
  }
}
